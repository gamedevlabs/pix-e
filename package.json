{
  "name": "fullstack-pix-e",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gamedevlabs/pix-e.git"
  },
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "lint": "npm run lint --workspace=frontend",
    "format": "npm run format --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "dev": "npm run dev --workspace=frontend"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0"
  },
  "lint-staged": {
    "**/*.{js,vue,ts}": [
      "npm run lint --workspace=frontend",
      "npm exec --workspace=frontend prettier -- --write"
    ],
    "**/*.{html,json,yml,yaml,md,css,scss,less}": "npm exec --workspace=frontend prettier -- --write"
  }
}
